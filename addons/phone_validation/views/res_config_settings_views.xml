<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.phone.validation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='module_phone_validation_settings']" position="after">
                <div class="content-group">
                    <div class="mt16">
                        <label for="phone_international_format" class="o_light_label"/>
                        <field name="phone_international_format" widget="radio" class="o_light_label"/>
                    </div>
                </div>
             </xpath>
        </field>
    </record>
</odoo>
